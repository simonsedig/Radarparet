@{
    Layout = null;
    
    // return logged in user
    string loggedUser()
    {
        // keep empty to fill with new string

        string newString = "";

        string currentUser = User.Identity.Name;

        for (int i = 0; i < currentUser.Length; i++)
        {
            if (i == 0)
            {
                // convert first char to big
                char tempChar = Char.ToUpper(currentUser[i]);

                // add to string
                newString += tempChar;
            }
            else
            {
                // add normal w/o convert to upper
                char tempChar = currentUser[i];

                // add to string
                newString += tempChar;
            }
        }
        return newString;
    }
}

